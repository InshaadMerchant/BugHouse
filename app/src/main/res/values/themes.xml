<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.BugHouse" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Make the window background transparent -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- Make window translucent to prevent default splash screen -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Disable system splash screen (Android 12+) -->
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="31">
            @android:color/transparent
        </item>
        <!-- Set system bar colors to be transparent -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>